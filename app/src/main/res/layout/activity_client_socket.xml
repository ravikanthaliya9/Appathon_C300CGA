<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/NewTool"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <ImageView
        android:id="@+id/imageNewTool"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/design8"
        android:scaleType="centerCrop"/>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:orientation="vertical"
tools:context=".ClientSocket" >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:autoLink="web"
    android:text="New Tool"
    android:textSize="16dp"
    android:textStyle="bold" />
<EditText
    android:id="@+id/address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:hint="Tool IP Address" />
<EditText
    android:id="@+id/port"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:hint="Service Port No." />
 <EditText
    android:id="@+id/toolname"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:layout_margin="8dp"
    android:hint="Tool Name" />
<Button
    android:id="@+id/connect"
    android:layout_margin="8dp"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/mybutton"
    android:text="Connect..."/>
<Button
    android:id="@+id/clear"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:background="@drawable/mybutton"
    android:text="Clear Error"/>
<TextView
    android:id="@+id/response"
    android:layout_width="wrap_content"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"/>

</LinearLayout>

</FrameLayout>